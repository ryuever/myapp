<div class="row">
  <aside class="span-150">
    <section>
      <%= will_paginate @users, :outer_window => 1, :inner_window => 1 %>
      <ul class='users'>
        <% @users.each do |user| %>
          <li>
            <%= gravatar_for user, size: 22 %>
            <% if user == @user %>
              <%= link_to user.name, users_attachments_all_path(user), {:class => "current-link"}%>
            <% else %>
              <%= link_to user.name, users_attachments_all_path(user) %>              
            <% end %>

          </li>        
        <% end %>
      </ul>
        <%= will_paginate @users%>
    </section>
  </aside>
  <div class="span-770">
      <% if @attachments ==[] %>
        <% flash.now[notice] = "The book list is empty" %>
      <% end %>
        <table class="table table-striped fixed">
          <thead>
            <tr>
              <th>File Name</th>
              <th>Size</th>
              <th>Category</th>
              <th>Update Time</th>
              <th>Download Time</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <%= render @attachments %> 
          </tbody>
        </table>
  </div>
</div>
